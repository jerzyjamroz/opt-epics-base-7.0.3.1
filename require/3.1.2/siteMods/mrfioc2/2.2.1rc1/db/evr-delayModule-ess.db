  field( HOPR, "8.686")
  field( LOPR, "0")
  field( PREC, 2)
  field( FLNK, "$(P)$(R=)$(S=:)UnivDlyModule$(SLOT)-Delay1-RB")
  info( autosaveFields_pass0, "VAL")
